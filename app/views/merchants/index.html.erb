<h1>Merchants</h1>

<%= link_to 'New Merchant', new_merchant_path, class: 'btn btn-info' %>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
      <th>Status</th>
      <th>Amount</th>
      <th>Total transaction sum</th>
      <th>Created at</th>
      <th colspan="3"> Action </th>
    </tr>
  </thead>

  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= merchant.name %></td>
        <td><%= merchant.email %></td>
        <td><%= merchant.type %></td>
        <td><%= merchant.status %></td>
        <td><%= merchant.amount %></td>
        <td><%= merchant.total_transaction_sum %></td>
        <td><%= display_date merchant.created_at %></td>
        <td><%= link_to 'Show', merchant %></td>
        <td><%= link_to 'Edit', edit_merchant_path(merchant) %></td>
        <td><%= link_to 'Destroy', merchant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
