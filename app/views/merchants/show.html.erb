<div class="container">
  <p>
    <strong>Name:</strong>
    <%= @merchant.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @merchant.email %>
  </p>

  <p>
    <strong>Type:</strong>
    <%= @merchant.type %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @merchant.status %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= @merchant.amount %>
  </p>

  <p>
    <strong>Total transaction sum:</strong>
    <%= @merchant.total_transaction_sum %>
  </p>

  <p>
    <strong>Created at:</strong>
    <%= display_date @merchant.created_at %>
  </p>
</div>

<%= link_to 'Edit', edit_merchant_path(@merchant), class: 'btn btn-info' %> |
<%= link_to 'Back', merchants_path, class: 'btn btn-info' %>
